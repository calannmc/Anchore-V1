<footer class="bg-gray-900" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl px-6 py-16 sm:py-12 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <img class="h-7 mx-auto" src="{{settings.logo}}" alt="{{help_center.name}}">
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            {{#if settings.footer_column_1}}
              <h3 class="text-sm text-center md:text-left font-semibold leading-6 text-white">{{settings.footer_column_1}}</h3>
              <ul role="list" class="mt-6 space-y-4">
                {{#each settings.footer_column_1_links}}
                  <li class="text-center md:text-left">
                    <a href="{{this.url}}" class="text-sm leading-6 text-gray-300 hover:text-white">{{this.name}}</a>
                  </li>
                {{/each}}
              </ul>
            {{/if}}
          </div>
          {{#if settings.footer_column_2}}
            <div class="mt-10 md:mt-0">
              <h3 class="text-sm text-center md:text-left font-semibold leading-6 text-white">{{settings.footer_column_2}}</h3>
              <ul role="list" class="mt-6 space-y-4">
                {{#each settings.footer_column_2_links}}
                  <li class="text-center md:text-left">
                    <a href="{{this.url}}" class="text-sm leading-6 text-gray-300 hover:text-white">{{this.name}}</a>
                  </li>
                {{/each}}
              </ul>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
    <!-- Additional wrapper link -->
    <div class="wrapper-link text-center py-4">
      <a href="http://example.com" class="text-white">Visit Our Corporate Site</a>
    </div>
    <!-- Footer bottom section for legal and social -->
    <div class="flex justify-between items-center border-t border-gray-700 pt-4">
      <!-- Legal Wrapper on the left -->
      <div class="legal-wrapper text-gray-300">
        <a href="/terms" class="text-sm hover:text-white">Terms of Service</a> |
        <a href="/privacy" class="text-sm hover:text-white">Privacy Policy</a> |
        <span class="text-sm">&copy; 2024 Your Company Name. All rights reserved.</span>
      </div>
      <!-- Social Icons on the right -->
      <div class="social-icons">
        <a href="https://twitter.com/yourhandle" target="_blank" class="text-gray-300 hover:text-white">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="https://facebook.com/yourpage" target="_blank" class="text-gray-300 hover:text-white">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="https://linkedin.com/company/yourcompany" target="_blank" class="text-gray-300 hover:text-white">
          <i class="fab fa-linkedin-in"></i>
        </a>
      </div>
    </div>
  </div>
</footer>
